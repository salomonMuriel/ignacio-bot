# =============================================================================
# BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and update the values with your actual credentials

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# WhatsApp API Configuration (Meta Business)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=your-backend-audience-identifier

# JWT Configuration
JWT_SECRET_KEY=your_secure_jwt_secret_key_here_at_least_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Application Configuration
APP_ENV=development
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Backend Server Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=human

# Performance Configuration (for production)
UVICORN_WORKERS=1
UVICORN_MAX_REQUESTS=1000
UVICORN_MAX_REQUESTS_JITTER=50

# Security Configuration
SECURE_SSL_REDIRECT=false
SECURE_PROXY_SSL_HEADER=

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Rate Limiting (if implemented)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10


# File Upload Configuration
MAX_FILE_SIZE_MB=20
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document