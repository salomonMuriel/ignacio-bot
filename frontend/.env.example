# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and update the values with your actual credentials

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000

# Auth0 Configuration (for frontend authentication)
VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your_auth0_client_id
VITE_AUTH0_AUDIENCE=your-backend-audience-identifier

# Supabase Configuration (for direct frontend access if needed)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Application Configuration
VITE_APP_ENV=development
VITE_APP_NAME="Ignacio Bot"
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_WHATSAPP_INTEGRATION=true

# External Integrations
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_SHOW_BETA_FEATURES=false

# File Upload Configuration
VITE_MAX_FILE_SIZE_MB=20
VITE_SUPPORTED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# WebSocket Configuration (if using real-time features)
VITE_WS_URL=ws://localhost:8000/ws

# Production URLs (update these for production deployment)
# VITE_API_BASE_URL=https://api.ignacio.ignia.lat
# VITE_WS_URL=wss://api.ignacio.ignia.lat/ws