# =============================================================================
# IGNACIO BOT - SHARED ENVIRONMENT VARIABLES
# =============================================================================
# This file contains variables used by both backend and frontend
# For deployment, copy this to .env and update with your actual values
# Individual services may have their own additional .env files

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Change these based on your deployment target
DEPLOYMENT_TYPE=local
# Options: local, docker, cloud, coolify

# Domain Configuration (update for production)
DOMAIN=localhost
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_URL=http://localhost:8000

# =============================================================================
# DATABASE CONFIGURATION (SUPABASE)
# =============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# AI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# =============================================================================
# AUTHENTICATION (AUTH0)
# =============================================================================
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_AUDIENCE=your-backend-audience-identifier

# =============================================================================
# WHATSAPP INTEGRATION
# =============================================================================
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your_secure_jwt_secret_key_at_least_32_characters_long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Development CORS (update for production)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
BACKEND_HOST=localhost
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES (VITE)
# =============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your_auth0_client_id
VITE_AUTH0_AUDIENCE=your-backend-audience-identifier
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_APP_ENV=development

# =============================================================================
# PRODUCTION OVERRIDES (uncomment and update for production)
# =============================================================================
# APP_ENV=production
# DEBUG=false
# LOG_LEVEL=INFO
# CORS_ORIGINS=https://your-production-domain.com
# FRONTEND_URL=https://your-production-domain.com
# BACKEND_URL=https://api.your-production-domain.com
# VITE_API_BASE_URL=https://api.your-production-domain.com
# SECURE_SSL_REDIRECT=true
# UVICORN_WORKERS=4

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Analytics
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_SENTRY_DSN=

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Used by docker-compose files
COMPOSE_PROJECT_NAME=ignacio-bot
POSTGRES_PASSWORD=your_postgres_password_if_using_local_db
